<h1>Listing players</h1>

<p><%= link_to 'List games', games_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Win %</th>
    <th>Hidden</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= number_to_percentage(player.win_percentage, precision: 0 ) %></td>
    <td><%= player.hidden %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

