<h1>Listing games</h1>

<table>
  <tr>
    <th>White offense</th>
    <th>White defense</th>
    <th>Blue offense</th>
    <th>Blue defense</th>
    <th>White score</th>
    <th>Blue score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @games.each do |game| %>
  <tr>
    <% game.played_positions.each do |p| %>
      <% if p.position == :white_offense %>
        <td><%= p.player.name %></td>
      <% end %>
      <% if p.position == :white_defense %>
        <td><%= p.player.name %></td>
      <% end %>
      <% if p.position == :blue_offense %>
        <td><%= p.player.name %></td>
      <% end %>
      <% if p.position == :blue_defense %>
        <td><%= p.player.name %></td>
      <% end %>
    <% end %>
    <td><%= game.white_score %></td>
    <td><%= game.blue_score %></td>

    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

