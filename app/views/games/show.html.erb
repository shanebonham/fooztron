<% @game.played_positions.each do |position| %>
  <p>
    <b><%= position.position.to_s.humanize %>:</b>
    <%= position.player.name %>
  </p>
<% end %>

<p>
  <b>White score:</b>
  <%= @game.white_score %>
</p>

<p>
  <b>Blue score:</b>
  <%= @game.blue_score %>
</p>

<% if current_user.present? and current_user.admin? %>
  <%= link_to 'Edit', edit_game_path(@game) %> |
<% end %>
<%= link_to 'Back', games_path %>
